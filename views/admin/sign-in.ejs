<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Sign In</title>
    <!-- Favicon-->
    <link rel="icon" href="<%=process.env.ADMIN_UPLOAD_URL%>setting/favicon/<%=ComDetail.favicon%>" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="<%=process.env.ADMIN_ASSETS_URL%>plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="<%=process.env.ADMIN_ASSETS_URL%>plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="<%=process.env.ADMIN_ASSETS_URL%>plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="<%=process.env.ADMIN_ASSETS_URL%>css/style.css" rel="stylesheet">
</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);"><b><%=ComDetail.company_name%></b></a>
            <small><%=ComDetail.company_title%></small>
        </div>
        <div class="card">
            <div class="body">
                <%- include('includes/message'); -%>
                <form id="sign_in" action="<%=process.env.BASE_URL%>/admin/login" method="POST">
                    <div class="msg">Sign in to start your session</div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div class="form-line">
                            <input type="text" class="form-control" name="username" placeholder="Username" required autofocus>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8 p-t-5">
                            <!-- <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                            <label for="rememberme">Remember Me</label> -->
                        </div>
                        <div class="col-xs-4">
                            <button class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button>
                        </div>
                    </div>
                    <div class="row m-t-15 m-b--20">
                        <div class="col-xs-6">
                            <!-- <a href="<%=process.env.BASE_URL%>/admin/register">Register Now!</a> -->
                        </div>
                        <div class="col-xs-6 align-right">
                            <a href="<%=process.env.BASE_URL%>/admin/forgot-password">Forgot Password?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>plugins/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>plugins/jquery-validation/jquery.validate.js"></script>

    <!-- Custom Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>js/admin.js"></script>
    <script src="<%=process.env.ADMIN_ASSETS_URL%>js/pages/examples/sign-in.js"></script>
</body>

</html>