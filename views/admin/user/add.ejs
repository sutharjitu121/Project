<%- include('../includes/header') %>

<%- include('../includes/leftsidebar') %>

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>ADD USER</h2>
        </div>
        <!-- add list -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Fill Your Information</h2>
                    </div>
                    <div class="body">
                        <%- include('../includes/message'); -%>
                        <form id="sign_up" action="<%=process.env.BASE_URL%>/admin/user/addsave" method="POST" enctype="multipart/form-data">
                            <div class="form-group form-float">
                                <label class="form-label">Role Id</label>
                                <div class="form-line">
                                    <select required name="roleid" class="form-control show-tick">
                                        <option value="" selected disabled >-- Please select --</option>
                                        <%if(roledata.length > 0){roledata.forEach(function(value,index){%>
                                            <option value="<%=value.id%>"><%=value.role_name%></option>
                                        <%})}%>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="fname" required="" aria-required="true">
                                    <label class="form-label">First Name</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="lname" required="" aria-required="true">
                                    <label class="form-label">Last Name</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="emailid" required="" aria-required="true">
                                    <label class="form-label">Email ID</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="mobilenumber" required="" aria-required="true">
                                    <label class="form-label">Mobile Number</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="alternatemo" required="" aria-required="true">
                                    <label class="form-label">Alternate Number</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="file" class="form-control" name="Imagefile" aria-required="true">
                                </div>
                            </div>
                            <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Basic Validation -->
    </div>
</section>

<%- include('../includes/footer') %>