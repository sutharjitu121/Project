<%- include('../includes/header') %>

<%- include('../includes/leftsidebar') %>

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>EDIT USER</h2>
        </div>
        <!-- add user -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Fill Your Information</h2>
                    </div>
                    <div class="body">
                        <%- include('../includes/message'); -%>
                        <form id="form_validation" action="<%=process.env.BASE_URL%>/admin/user/editsave" method="POST" enctype="multipart/form-data" novalidate="novalidate">
                            <input type="hidden" name="id" value="<%=DataObj.UserID%>">
                            <div class="form-group form-float">
                                <label class="form-label">Role</label>
                                <div class="form-line">
                                    <select required name="roleid" class="form-control show-tick">
                                        <option value="" disabled="" >-- Please select --</option>
                                        <% if(roledata.length > 0){roledata.forEach(function(values,index){ %>
                                            <option <%= (values.id==DataObj.RoleID) ? 'selected' : '' %> value="<%=values.id%>" ><%=values.role_name%></option>
                                        <% })} %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" value="<%=DataObj.Fname%>" class="form-control" name="fname" required="" aria-required="true">
                                    <label class="form-label">First Name</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" value="<%=DataObj.Lname%>" class="form-control" name="lname" required="" aria-required="true">
                                    <label class="form-label">Last Name</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" value="<%=DataObj.EmailID%>" class="form-control" name="emailid" required="" aria-required="true">
                                    <label class="form-label">Email ID</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" value="<%=DataObj.MobileNumber%>" class="form-control" name="mobilenumber" required="" aria-required="true">
                                    <label class="form-label">Mobile Number</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" value="<%=DataObj.AlternativetNo%>" class="form-control" name="alternatemo" required="" aria-required="true">
                                    <label class="form-label">Alternate Number</label>
                                </div>
                            <div class="form-group form-float">
                                 <input type="file" class="form-control" name="Imagefile" aria-required="true">
                            </div>
                                <div>
                                    <%if(DataObj.userprofile != null && DataObj.userprofile != ''){%>
                                        <img height="100px" src="/user/<%=DataObj.userprofile%>" />
                                    <%}%>
                                </div>
                            <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Basic Validation -->
    </div>
</section>

<%- include('../includes/footer') %>