<%- include('../includes/header'); -%>

    <%- include('../includes/leftsidebar'); -%>

        <section class="content">
            <div class="container-fluid">
                <div class="block-header">
                    <h2>
                        User List
                    </h2>
                </div>
                <!-- Basic Examples -->
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    USER LIST
                                </h2>
                                <ul class="header-dropdown m-r--5">
                                    <a href="<%=process.env.BASE_URL%>/admin/user/add">
                                        <button type="button" class="btn btn-primary waves-effect">Add</button>
                                    </a>
                                </ul>
                            </div>
                            <div class="body">

                                <%- include('../includes/message'); -%>

                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                        <thead>
                                            <tr>
                                                <th>Role</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Email ID</th>
                                                <th>Mobile Number</th>
                                                <th>Alternate Number</th>
                                                <th>Image</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%if(Data){Data.forEach(function(currentValue, index){%>
                                                <tr>
                                                    <td><%=currentValue.rolename%></td>
                                                    <td><%=currentValue.Fname%></td>
                                                    <td><%=currentValue.Lname%></td>
                                                    <td><%=currentValue.EmailID%></td>
                                                    <td><%=currentValue.MobileNumber%></td>
                                                    <td><%=currentValue.AlternativetNo%></td>
                                                    <td> 
                                                        <%if(currentValue.userprofile != null && currentValue.userprofile != ''){%>
                                                            <img height="60px" width="60px" src="/user/<%=currentValue.userprofile%>" />
                                                        <%}else{%>
                                                            <img height="60px" width="60px" src="<%=process.env.UNAVAILABLE_IMAGE%>" />
                                                        <%}%>
                                                    </td>
                                                    <td>
                                                        <a href="<%=process.env.BASE_URL%>/admin/user/isactive/<%=currentValue.UserID%>">
                                                            <button type="button" class="btn <%=(currentValue.status) ? 'btn-success' : 'btn-danger'%> waves-effect">
                                                                <%=(currentValue.status) ? 'Active' : 'Block'%>
                                                            </button>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="<%=process.env.BASE_URL%>/admin/user/edit/<%=currentValue.UserID%>"><button type="button" class="btn btn-edit waves-effect"><i class="material-icons">edit</i>
                                                        </button></a>
                                                        <a href="<%=process.env.BASE_URL%>/admin/user/delete/<%=currentValue.UserID%>">
                                                        <button type="button" class="btn btn-danger waves-effect"><i class="material-icons">delete</i>
                                                        </button></a>
                                                    </td> 
                                                </tr>
                                            <%});}%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- #END# Basic Examples -->
            </div>
        </section>
    


        <%- include('../includes/footer'); -%>