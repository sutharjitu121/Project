<%- include('../includes/header') %>

<%- include('../includes/leftsidebar') %>

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>EDIT </h2>
        </div>
        <!-- edit list -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Fill Your Information</h2>
                    </div>
                    <div class="body">
                        <%- include('../includes/message'); -%>
                        <form id="form_validation" action="<%=process.env.BASE_URL%>/admin/gallery/editsave" method="POST" enctype="multipart/form-data" novalidate="novalidate">
                            <input type="hidden" name="id" value="<%=DataObj.id%>">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" value="<%=DataObj.name%>" class="form-control" name="name" required="" aria-required="true">
                                    <label class="form-label">Name</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <label class="form-label">Category</label>
                                <div class="form-line">
                                    <select required name="categoryid" class="form-control show-tick">
                                        <option value="" disabled="" >-- Please select --</option>
                                        <% if(DataList.length > 0){DataList.forEach(function(values,index){ %>
                                            <option <%= (values.id==DataObj.category_id) ? 'selected' : '' %> value="<%=values.id%>" ><%=values.name%></option>
                                        <% })} %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                 <input type="file" value="<%=DataObj.image%>" class="form-control" name="Imagefile" aria-required="true">
                            </div>
                                <div>
                                    <%if(DataObj.image != null && DataObj.image != ''){%>
                                        <img height="150px" src="/gallery/<%=DataObj.image%>" />
                                    <%}%>
                                </div>
                            <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Basic Validation -->
    </div>
</section>

<%- include('../includes/footer') %>