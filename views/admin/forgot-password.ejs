<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Forgot Password</title>
    <!-- Favicon-->
    <link rel="icon" href="<%=process.env.ADMIN_UPLOAD_URL%>setting/favicon/<%=ComDetail.favicon%>" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="<%=process.env.ADMIN_ASSETS_URL%>plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="<%=process.env.ADMIN_ASSETS_URL%>plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="<%=process.env.ADMIN_ASSETS_URL%>animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="<%=process.env.ADMIN_ASSETS_URL%>css/style.css" rel="stylesheet">
</head>

<body class="fp-page">
    <div class="fp-box">
        <div class="logo">
            <a href="javascript:void(0);"><b><%=ComDetail.company_name%></b></a>
            <small><%=ComDetail.company_title%></small>
        </div>
        <div class="card">
            <div class="body">
                <%- include('includes/message'); -%>
                <form id="forgot_password" method="POST" id="form_validation" action="<%=process.env.BASE_URL%>/admin/forgot-password">
                    <div class="msg">
                        Enter your email address that you used to register. We'll send you an email with your username and a
                        link to reset your password.
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-line">
                            <input type="email" class="form-control" name="email" placeholder="Email" required autofocus>
                        </div>
                    </div>

                    <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">RESET MY PASSWORD</button>

                    <div class="row m-t-20 m-b--5 align-center">
                        <a href="<%=process.env.BASE_URL%>/admin/login">Sign In!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>plugins/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>plugins/jquery-validation/jquery.validate.js"></script>

    <!-- Custom Js -->
    <script src="<%=process.env.ADMIN_ASSETS_URL%>js/admin.js"></script>
    <script src="<%=process.env.ADMIN_ASSETS_URL%>js/pages/examples/forgot-password.js"></script>
</body>

</html>