<%- include('../includes/header') %>

<%- include('../includes/leftsidebar') %>

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>EDIT</h2>
        </div>
        <!-- edit -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Fill Your Information</h2>
                    </div>
                    <div class="body">
                        <%- include('../includes/message'); -%>
                        <form id="form_validation" action="<%=process.env.BASE_URL%>/admin/gallery_category/editsave" method="POST" novalidate="novalidate">
                            <input type="hidden" name="id" value="<%=DataObj.id%>">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" value="<%=DataObj.name%>" class="form-control" name="name" required="" aria-required="true">
                                    <label class="form-label">Name</label>
                                </div><br>
                                <div class="switch">
                                    <label>OFF<input type="checkbox" name="show" <%= (DataObj.is_show == 1) ? 'checked': '' %>><span class="lever"></span>ON</label>
                                </div>
                            </div>
                            <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Basic Validation -->
    </div>
</section>

<%- include('../includes/footer') %>