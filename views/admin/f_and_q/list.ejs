<%- include('../includes/header'); -%>

<%- include('../includes/leftsidebar'); -%>

        <section class="content">
            <div class="container-fluid">
                <div class="block-header">
                    <h2>
                        Frequently Asked Question
                    </h2>
                </div>
                <!-- List -->
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    Frequently Asked Question
                                </h2>
                                <ul class="header-dropdown m-r--5">
                                    <a href="<%=process.env.BASE_URL%>/admin/f_and_q/add">
                                        <button type="button" class="btn btn-primary waves-effect">Add</button>
                                    </a>
                                </ul>
                            </div>
                            <div class="body">
                                <%- include('../includes/message'); -%>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">                                      
                                        <thead>
                                            <tr>
                                                <th>Question</th>
                                                <th>Answer</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>  
                                        </thead>   
                                        <tbody>
                                            <%if(Data){Data.forEach(function(currentValue, index){%>
                                                <tr>
                                                    <td><%=currentValue.question%></td>
                                                    <td><%=currentValue.answer%></td>
                                                    <td>
                                                        <a href="<%=process.env.BASE_URL%>/admin/f_and_q/isactive/<%=currentValue.id%>">
                                                            <button type="button" class="btn <%=(currentValue.status) ? 'btn-success' : 'btn-danger'%> waves-effect">
                                                                <%=(currentValue.status) ? 'Active' : 'Block'%>
                                                            </button>
                                                        </a>    
                                                    </td>
                                                    <td>
                                                        <a href="<%=process.env.BASE_URL%>/admin/f_and_q/edit/<%=currentValue.id%>"><button type="button" class="btn btn-edit waves-effect"><i class="material-icons">edit</i>
                                                        </button></a>
                                                        <a href="<%=process.env.BASE_URL%>/admin/f_and_q/delete/<%=currentValue.id%>">
                                                        <button type="button" class="btn btn-danger waves-effect"><i class="material-icons">delete</i>
                                                        </button></a>
                                                    </td>
                                                </tr>
                                            <%});}%>
                                        </tbody>                                    
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- #END# Basic Examples -->
            </div>
        </section>
    


<%- include('../includes/footer'); -%>